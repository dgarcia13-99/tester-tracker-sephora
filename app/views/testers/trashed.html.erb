<section class="container mt-5">
  <div class="row">
    <section class="col-md-6">
      <header>
        <h2 class="text-center trashed-header">Testers Trashed This Month</h2>
      </header>
      <div class="d-flex justify-content-center trashed-chart">
        <%= pie_chart monthly_chart_data_path, height: "400px", width: "400px" %>
      </div>

      <header>
        <h2 class="text-center monthly-header">Monthly Trend of Testers Used in 2024</h2>
      </header>
      <div class="d-flex justify-content-center trashed-chart">
        <%= line_chart yearly_chart_data_path, height: "400px", width: "400px" %>
      </div>
    </section>

    <section class="col-md-6">
      <header class="trashed-body-header">
        <h1>Trashed Testers</h1>
      </header>
      <div class="row g-4" data-masonry='{"percentPosition": true }'>
        <% @testers.each do |tester| %>
          <article class="col-sm-12 col-lg-6">
            <div class="card h-100 border-secondary mb-3" role="group">
              <header class="card-header border-dark text-center">
                <strong><%= tester.product.name %></strong>
              </header>
              <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                <%= image_tag tester.product.image, width: "150", height: "150", class: "img-fluid rounded", alt: "Image of #{tester.product.name}" %>
                <p>
                  <strong>SKU:</strong> <%= tester.product.sku %>
                </p>
                <p>
                  <strong>Condition:</strong> <%= tester.condition %>
                </p>
                <p>
                  <strong>Location:</strong> <%= tester.location %>
                </p>
                <p>
                  <strong>Time trashed:</strong> <%= tester.updated_at.strftime("%B %d, %Y %H:%M:%S") %>
                </p>
              </div>
            </div>
          </article>
        <% end %>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <%= paginate @testers, aria_label: "Pagination for trashed testers" %>
      </div>
    </section>
  </div>
</section>
