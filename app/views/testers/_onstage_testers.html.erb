<section class="onstage_testers" role="region">
  <main class="container tester-container">
    <div class="row" data-masonry='{"percentPosition": true }'>
      <% @onstage_testers.each do |tester| %>
        <article class="col-sm-6 col-lg-4 mb-4">
          <div class="card h-100 border-secondary mb-3" role="group">
            <header class="card-header border-dark tester-card-header">
              <strong><%= tester.product.name %></strong>
            </header>

            <div class="card-body d-flex flex-column align-items-center justify-content-center" >

              <%= render "testers/tester_card", tester: tester %>

              <% if current_employee.role.title == "Operations Associate" %>
                <p>
                  <%= button_to "Approve this tester", tester, method: :delete, class: "btn btn-outline-secondary", aria: { label: "Approve #{tester.product.name} tester" } %>
                </p>
              <%end%>

            </div>
          </div>
        </article>
      <% end %>
      <div>
        <%= paginate @onstage_testers, param_name: :onstage_page, aria_label: "Pagination for onstage testers" %>
      </div>
    </div>
  </main>
</section>
